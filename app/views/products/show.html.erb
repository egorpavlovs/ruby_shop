<div class="all">
<p id="notice"><%= notice %></p>

<div class="boundaries">
  <h1>
    <!-- <strong>Title:</strong> -->
    <%= @product.title %>
  </h1>
</div>

<div class="all_show">
  <p>
    <%= @product.description %>
  </p>

  <div class="ps">
    
    <div class="price">
      <h5>Цена:</h5>
      <%= @product.price %>
      <text> рублей.</text>
    </div>
  

    <div class="stock">
      <h5>На складе</h5>
      <%= @product.stock %>
      <text> штук.</text>
    </div>
  </div>
  
  <div class="links">
    <%= link_to 'Edit', edit_product_path(@product) %> |
    <%= link_to 'Back', products_path %>
  </div>

  <%= render 'comments/form', comment: @comment, product: @product %>


    <!-- <thead>
      <tr>
        <th>Text</th>
        <th>Product</th>
        <th colspan="3"></th>
      </tr>
    </thead> -->
    <div class="comments">
      <body>
        <% @product.comments.each do |comment| %>
          <div class="comment_text">
            <td><%= comment.text %></td>
            <!-- <td><%= comment.product_id %></td>
            <td><%= link_to 'Show', comment %></td> -->
            <!-- <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
            <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
          </div>
        <% end %>
      </body>
    </div>
  </div>

</div>