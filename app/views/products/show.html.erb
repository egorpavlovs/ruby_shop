<p id="notice"><%= notice %></p>

<div class="boundaries">
  <h1>
    <!-- <strong>Title:</strong> -->
    <%= @product.title %>
  </h1>
</div>

<p>
  <!-- <strong>Description:</strong> -->
  <h3></h3>
  <%= @product.description %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>


<%= render 'comments/form', comment: @comment, product: @product %>


<table>
  <!-- <thead>
    <tr>
      <th>Text</th>
      <th>Product</th>
